<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- layout_toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--导航栏上的标题颜色-->
        <item name="android:textColorPrimary">@color/text_gray_dark</item>
        <!--Activity窗口的颜色-->
        <item name="android:windowBackground">@color/windowBackground</item>

        <!--按钮选中或者点击获得焦点后的颜色-->
        <item name="colorAccent">@color/colorButtonNormal</item>
        <!--和 colorAccent相反，正常状态下按钮的颜色-->
        <item name="colorControlNormal">@color/colorButtonNormal</item>
        <!--Button按钮正常状态颜色-->
        <item name="colorButtonNormal">@color/colorButtonNormal</item>

        <item name="android:textColor">@color/text_black</item>
    </style>

</resources>
